<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rohberg.bluechurch">
<body>

<metal:custom_title fill-slot="content-title" tal:define="header view/header_string">
    <tal:folder tal:condition="not:view/is_collection">
        <h1 class="documentFirstHeading">
          <span tal:replace="header/main" tal:condition="header/main"/>

        </h1>
        <h2 tal:content="header/sub" tal:condition="header/sub" />
    </tal:folder>
    <tal:collection tal:condition="view/is_collection">
        <h1 class="documentFirstHeading">
          <span tal:replace="context/title" />

        </h1>
    </tal:collection>
  <ul class="mode_selector">
    <li>
      <a class="mode_ical"  href="" tal:attributes="href view/ical_url"
         title="Download this event in iCal format"
         i18n:attributes="title title_add_to_ical;">
          <span i18n:translate="label_add_to_ical">iCal</span></a>

    </li>
  </ul>
</metal:custom_title>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">
<tal:def define="batch view/events;
                 toLocalizedTime nocall: context/@@plone/toLocalizedTime;">

    <section class="row">
        <tal:items repeat="data batch">            
            
            <div class="photoAlbumEntry col-xs-12 col-sm-6 ">
              <a tal:define="
                  fullname python:data.portal_type=='dexterity.membrane.bluechurchmembraneprofile' and 
                  (getattr(data, 'first_name', '') and (getattr(data, 'first_name', '')+' ') or '')
                   + getattr(data, 'last_name', '') or None; 
                  title python:fullname or data.title;
                  description data/description|string:;
                  city data/city|data/eventlocation/to_object/city|string:;
                  desc_or_title python:description or title;
                  url data/absolute_url;
                  start_date data/start|nothing;
                  item_hasimage nocall:data/@@images/image|nothing;"
                  tal:attributes="href url;
                        title description;">

                <tal:block>
                    <span tal:condition="item_hasimage" class="photoAlbumEntryWrapper">
                        <img tal:attributes="src string:$url/@@images/image/mini" />
                    </span>
                    <span tal:condition="not:item_hasimage" class="photoAlbumEntryWrapper">
                        <img tal:attributes="src string:/++theme++bluechurch/images/default_400.png" />
                    </span>    

                    <span class="photoAlbumEntryTitle" tal:content="title">Title</span>
                    <span class="photoAlbumEntryCity" tal:content="city">City</span>
                    <span class="photoAlbumEntryStartdate" 
                        tal:content="python:here.toLocalizedTime(start_date)">Startdate</span>
                </tal:block>


              </a>
            </div>
            
            
            
            
            
        </tal:items>

    </section>

  <div metal:use-macro="context/batch_macros/macros/navigation" />

</tal:def>
</metal:block>
</metal:content-core>

</body>
</html>
