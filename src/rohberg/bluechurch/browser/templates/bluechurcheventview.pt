<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="rohberg.bluechurch">
<body>
    <metal:content-core fill-slot="content-core">

        <!-- <p tal:content="context/city">DEBUG</p> -->
        <tal:eventsummary replace="structure context/@@event_summary"/>
    
        <div tal:content="structure view/w/IRichText.text/render" />
        <p>
            <span tal:replace="structure view/w/homepage/render">Website</span>
        </p>
        <p>Tags: <span tal:content="structure view/w/bluechurchtags/render" /></p>
        <p>Eventformen: <span tal:content="structure view/w/eventformen/render" /></p>
        


        <p class="owner">Kontakt: 
            <a tal:attributes="href python:view.kontaktperson_profile.absolute_url()" 
                href="#"
                tal:content="view/kontaktperson_fullname">Kontaktperson</a>
        </p>

        <p>Beteiligte Artists: 
            <tal:beteiligte tal:repeat="beteiligter view/beteiligte">
                <a tal:attributes="href beteiligter/url"
                    href="#"
                    tal:content="beteiligter/fullname">Fullname Artist</a>
            </tal:beteiligte>
        </p>
        
        <p>Location: 
            <a tal:attributes="href python:view.location_obj.absolute_url()" 
                href="#"
                tal:content="view/location_title">Location</a>, 
                <span tal:content="view/location_obj/city">City</span>
        </p>
        
    </metal:content-core>
</body>
</html>