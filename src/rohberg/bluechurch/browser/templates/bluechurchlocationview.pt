<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="ploneconf.site">
<body>
    <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">

        <div tal:content="structure view/w/IRichText.text/render" />
        <p>
            <span tal:replace="structure view/w/homepage/render">Website</span>
        </p>
        
        <tal:address replace="structure context/@@base_location_view" />
        
        
        <div class="owner">Kontakt: 
            <a tal:attributes="href python:view.kontaktperson_profile.absolute_url()" 
                href="#"
                tal:content="view/kontaktperson_fullname">Kontaktperson</a>
        </div>
        
        <div class="additionalinfo">
            <div class="additionalinfoblock">
                <div class="label">Events dieser Location:</div> 
                <ul tal:repeat="obj view/events">
                    <li>
                        <a tal:attributes="href python:obj.absolute_url()"
                            tal:content="obj/Title">location</a>
                    </li>
                </ul>
            </div>
        </div>

    </metal:block>
    </metal:content-core>
    

</body>
</html>