<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="rohberg.bluechurch">
<body>
    <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">

        <div tal:content="structure view/w/IRichText.text/render" />

        <div class="meta_block" tal:condition="context/homepage"><span class="label_meta">Website</span> 
            <a tal:attributes="href context/homepage" 
                target="_blank" 
                tal:content="context/homepage">Website</a>
        </div>
        
        <tal:address replace="structure context/@@base_location_view" />
        
        
        <div class="owner meta_block"><span class="label_meta" i18n:translate="label_kontaktperson">Kontakt</span>
            <a tal:attributes="href python:view.kontaktperson_profile.absolute_url()" 
                href="#"
                tal:content="view/kontaktperson_fullname">Kontaktperson</a>
        </div>
        
        <div class="additionalinfo">
            <div class="additionalinfoblock">
                <div class="label" i18n:translate="">Events of this location</div> 
                <ul tal:repeat="obj view/events">
                    <li>
                        <a tal:attributes="href python:obj.absolute_url()"
                            tal:content="obj/Title">location</a>
                    </li>
                </ul>
            </div>
        </div>

    </metal:block>
    </metal:content-core>
    

</body>
</html>